{
  "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
  "name": "Send Email",
  "id": "apendo.send.email",
  "description": "Send Email",
  "version": 1,
  "documentationRef": "https://docs.camunda.io/docs/components/connectors/out-of-the-box-connectors/available-connectors-overview/",
  "icon": {
    "contents": "data:image/svg+xml;utf8,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20height%3D%2218%22%20width%3D%2218%22%20viewBox%3D%220%200%2010%2010%22%20shape-rendering%3D%22geometricPrecision%22%3E%3Ctitle%3ESlack%3C%2Ftitle%3E%3Cg%20fill%3D%22none%22%3E%3Cpath%20d%3D%22M0%2C0%20L0%2C10%20L10%2C10%20L10%2C0%20z%22%20fill%3D%22%23ecb12f%22%2F%3E%3C%2Fg%3E%3C%2Fsvg%3E"
  },
  "category": {
    "id": "connectors",
    "name": "Connectors"
  },
  "appliesTo": [
    "bpmn:Task"
  ],
  "elementType": {
    "value": "bpmn:ServiceTask"
  },
  "properties": [
    {
      "type": "Hidden",
      "value": "apendo:send-email:1",
      "binding": {
        "type": "zeebe:taskDefinition:type"
      }
    },
    {
      "label": "From",
      "description": "Email sent from this address",
      "type": "String",
      "value": "=\"secrets.FROM\"",
      "feel": "required",
      "binding": {
        "type": "zeebe:input",
        "name": "from"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Port",
      "description": "Port for smtp server",
      "type": "String",
      "value": "=\"secrets.PORT\"",
      "feel": "required",
      "binding": {
        "type": "zeebe:input",
        "name": "port"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Password",
      "description": "Password for from account",
      "type": "String",
      "value": "=\"secrets.FROM_PASSWORD\"",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "password"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Host",
      "description": "Which smpt host to use",
      "type": "String",
      "value": "=\"secrets.HOST\"",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "host"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "To",
      "description": "Email recepient",
      "type": "String",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "to"
      }
    },
    {
      "label": "Subject",
      "description": "Email subject",
      "type": "String",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "subject"
      }
    },
    {
      "label": "Text",
      "description": "Email subject",
      "type": "Text",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "text"
      }
    },
    {
      "label": "Result Variable",
      "description": "Name of variable to store the response in",
      "group": "output",
      "type": "String",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "resultVariable"
      }
    }
  ]
}