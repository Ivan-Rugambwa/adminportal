{
  "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
  "name": "Send Email",
  "id": "apendo.send.email",
  "description": "Send Email",
  "version": 1,
  "documentationRef": "https://docs.camunda.io/docs/components/connectors/out-of-the-box-connectors/available-connectors-overview/",
  "icon": {
    "contents": "https://icons-for-free.com/iconfiles/png/512/mail+email+mail+message+messagesent+online+send+icon-1320168115193956831.png"
  },
  "category": {
    "id": "connectors",
    "name": "Connectors"
  },
  "appliesTo": [
    "bpmn:Task"
  ],
  "elementType": {
    "value": "bpmn:ServiceTask"
  },
  "properties": [
    {
      "type": "Hidden",
      "value": "apendo:send-email:1",
      "binding": {
        "type": "zeebe:taskDefinition:type"
      }
    },
    {
      "label": "From",
      "description": "Email sent from this address",
      "type": "String",
      "value": "=\"secrets.FROM\"",
      "feel": "required",
      "binding": {
        "type": "zeebe:input",
        "name": "from"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Port",
      "description": "Port for smtp server",
      "type": "String",
      "value": "=\"secrets.PORT\"",
      "feel": "required",
      "binding": {
        "type": "zeebe:input",
        "name": "port"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Password",
      "description": "Password for from account",
      "type": "String",
      "value": "=\"secrets.FROM_PASSWORD\"",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "password"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Host",
      "description": "Which smpt host to use",
      "type": "String",
      "value": "=\"secrets.HOST\"",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "host"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "To",
      "description": "Email recepient",
      "type": "String",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "to"
      }
    },
    {
      "label": "Subject",
      "description": "Email subject",
      "type": "String",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "subject"
      }
    },
    {
      "label": "Text",
      "description": "Email subject",
      "type": "Text",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "text"
      }
    },
    {
      "label": "Result Variable",
      "description": "Name of variable to store the response in",
      "group": "output",
      "type": "String",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "resultVariable"
      }
    }
  ]
}