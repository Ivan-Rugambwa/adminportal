{
  "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
  "name": "Get user data",
  "id": "apendo.get.data.template",
  "description": "Get user data",
  "version": 1,
  "documentationRef": "https://docs.camunda.io/docs/components/connectors/out-of-the-box-connectors/available-connectors-overview/",
  "icon": {
    "contents": "data:image/svg+xml;user-circle.svg"
  },
  "category": {
    "id": "connectors",
    "name": "Connectors"
  },
  "appliesTo": [
    "bpmn:Task"
  ],
  "elementType": {
    "value": "bpmn:ServiceTask"
  },
  
  "properties": [
    {
      "type": "Hidden",
      "value": "apendo:get:2",
      "binding": {
        "type": "zeebe:taskDefinition:type"
      }
    },
    {
      "label": "Email",
      "description": "The email to use",
      "type": "String",
      "value": "=\"secrets.EMAIL\"",
      "feel": "required",
      "binding": {
        "type": "zeebe:input",
        "name": "email"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Password",
      "description": "The password to use",
      "type": "String",
      "value": "=\"secrets.PASSWORD\"",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "password"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Business name",
      "description": "The name of the business the user belongs to",
      "type": "String",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "businessName"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Result Variable",
      "description": "Name of variable to store the response in",
      "group": "output",
      "type": "String",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "resultVariable"
      }
    }
  ]
}
